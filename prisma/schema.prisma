generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Company {
  id             Int             @id @default(autoincrement())
  name           String
  createdAt      DateTime        @default(now())
  activityEvents ActivityEvent[]
  authEvents     AuthEvent[]
  employees      Employee[]
  hourEntries    HourEntry[]
  projects       Project[]
  sessions       Session[]
}

model User {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  passwordHash String
  createdAt    DateTime   @default(now())
  employees    Employee[]
}

model Employee {
  id              Int            @id @default(autoincrement())
  name            String
  email           String?
  companyId       Int?
  status          EmployeeStatus @default(INVITED)
  role            EmployeeRole   @default(EMPLOYEE)
  inviteExpiresAt DateTime?
  invitedAt       DateTime?
  onboardedAt     DateTime?
  lastLoginAt     DateTime?
  isActive        Boolean        @default(true)
  createdAt       DateTime       @default(now())
  passwordHash    String?
  userId          Int?
  inviteTokenHash String?        @unique
  company         Company?       @relation(fields: [companyId], references: [id])
  user            User?          @relation(fields: [userId], references: [id])
  hours           HourEntry[]
  sessions        Session[]

  @@unique([companyId, email])
  @@index([userId])
}

model Project {
  id        Int         @id @default(autoincrement())
  name      String
  color     String?
  companyId Int?
  isActive  Boolean     @default(true)
  createdAt DateTime    @default(now())
  hours     HourEntry[]
  company   Company?    @relation(fields: [companyId], references: [id])
}

model HourEntry {
  id           Int        @id @default(autoincrement())
  employeeId   Int
  projectId    Int?
  workDate     DateTime
  fromTime     String
  toTime       String
  breakMinutes Int        @default(0)
  hoursNet     Decimal    @db.Decimal(5, 2)
  hoursBrut    Decimal?   @db.Decimal(5, 2)
  description  String?
  status       HourStatus @default(PENDING)
  createdAt    DateTime   @default(now())
  rejectReason String?
  companyId    Int
  deletedAt    DateTime?
  company      Company    @relation(fields: [companyId], references: [id])
  employee     Employee   @relation(fields: [employeeId], references: [id])
  project      Project?   @relation(fields: [projectId], references: [id])

  @@index([companyId, workDate])
  @@index([companyId, employeeId, workDate])
}

model Session {
  id         Int       @id @default(autoincrement())
  tokenHash  String    @unique
  employeeId Int
  companyId  Int
  createdAt  DateTime  @default(now())
  expiresAt  DateTime
  revokedAt  DateTime?
  lastUsedAt DateTime?
  ip         String?
  userAgent  String?
  company    Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  employee   Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([companyId, expiresAt])
  @@index([employeeId, expiresAt])
}

model ActivityEvent {
  id         Int        @id @default(autoincrement())
  companyId  Int
  createdAt  DateTime   @default(now())
  actorType  ActorType
  actorId    Int?
  actorName  String?
  entityType EntityType
  entityId   Int?
  eventType  EventType
  summary    String?
  meta       Json?
  company    Company    @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId, createdAt])
  @@index([companyId, eventType, createdAt])
  @@index([companyId, actorType, actorId, createdAt])
  @@index([companyId, entityType, entityId, createdAt])
}

model AuthEvent {
  id          Int             @id @default(autoincrement())
  createdAt   DateTime        @default(now())
  companyId   Int?
  actorId     Int?
  actorType   ActorType?
  actorName   String?
  type        AuthEventType
  ok          Boolean
  emailHash   String?
  ipHash      String?
  userAgent   String?
  windowStart DateTime
  count       Int             @default(1)
  reason      AuthFailReason?
  meta        Json?
  company     Company?        @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([type, companyId, emailHash, ipHash, windowStart, reason])
  @@index([createdAt])
  @@index([companyId, createdAt])
  @@index([emailHash, windowStart])
  @@index([ipHash, windowStart])
  @@index([type, windowStart])
}

model RateLimitBucket {
  id          Int      @id @default(autoincrement())
  key         String
  windowStart DateTime
  count       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([key, windowStart])
  @@index([key])
  @@index([windowStart])
}

enum HourStatus {
  PENDING
  APPROVED
  REJECTED
}

enum EmployeeStatus {
  INVITED
  ACTIVE
  DISABLED
}

enum EmployeeRole {
  EMPLOYEE
  ADMIN
  OWNER
}

enum ActorType {
  EMPLOYEE
  ADMIN
  OWNER
  SYSTEM
}

enum EntityType {
  HOUR_ENTRY
  EMPLOYEE
  PROJECT
  COMPANY
  AUTH
}

enum EventType {
  HOUR_CREATED
  HOUR_EDITED
  HOUR_SUBMITTED
  HOUR_APPROVED
  HOUR_REJECTED
  HOUR_REOPENED
  HOUR_SUPERSEDED
  LOGIN
  LOGOUT
  EMPLOYEE_INVITED
  EMPLOYEE_ACTIVATED
  EMPLOYEE_DISABLED
  PROJECT_CREATED
  PROJECT_UPDATED
  PROJECT_DISABLED
  HOUR_DELETED
}

enum AuthEventType {
  LOGIN_SUCCESS
  LOGIN_FAIL
  LOGOUT
}

enum AuthFailReason {
  BAD_PASSWORD
  UNKNOWN_EMAIL
  DISABLED
  NOT_ACTIVE
  NO_PASSWORD
  MULTI_COMPANY_CHALLENGE
  CHALLENGE_INVALID
}
